<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/search_item_image"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_margin="20dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/search_item_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/search_item_image"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="asdasdasdadasd啊实打实大啊实打实打算啊实打实打算啊实打实大啊实打实的啊实打实的"
        android:textColor="@color/black"
        android:layout_marginRight="20dp"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/search_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/search_item_overview"
        android:layout_below="@id/search_item_overview"
        android:layout_marginTop="9dp"
        android:text="潮白河孔雀城" />

    <TextView
        android:id="@+id/search_item_house_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/search_item_overview"
        android:layout_below="@id/search_item_title"
        android:layout_marginTop="9dp"
        android:text="三室一厅" />

    <TextView
        android:text="合租"
        android:layout_toRightOf="@id/search_item_house_type"
        android:layout_alignBottom="@id/search_item_house_type"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/search_item_price"
        android:text="400元/月"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/search_item_house_type"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:textColor="#ff0000"
        android:textSize="18sp"
        android:layout_height="wrap_content" />
</RelativeLayout>
